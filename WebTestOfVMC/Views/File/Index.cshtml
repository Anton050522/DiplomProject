@model List<string> 

<div class="container">
    <div class="row">
        @foreach (var itemPath in Model)
        {
            <div class="col-md-3">
                <div class="alert alert-success" role="alert">
                    <a href="/File/DownloadFile/?filePath=@itemPath">
                        <img crs="~/@itemPath" alt="Alternate Text" height="100px" widh="205px" />
                    </a>
                </div>

            </div>
        }

    </div>
        @using (Html.BeginForm("Index", "File", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row">
                <div class="form-group col-md-6">
                    <input type="file" class="form-control" name="myFile" />
                </div>
                <div class="form-group col-md-6">
                    <input type="submit" class="filesubmit" name="Upload" />
                </div>
            </div>
        }
    </div>